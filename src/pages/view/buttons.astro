---
import FullScreenLayout from '../../layouts/FullScreenLayout.astro';
import Button from '../../components/Button.astro';
import ArrowRight from '../../components/icons/ArrowRight.astro';
---

<FullScreenLayout title="Buttons">
  <div class="page-flow">
    <!-- Hero with CTA pair -->
    <section data-seamless class="bg-gray-900 px-8 py-24">
      <div class="max-w-[var(--container-max)] mx-auto text-center">
        <p class="text-sm font-semibold text-primary-400 tracking-wide uppercase mb-4">Introducing Acme Platform</p>
        <h1 class="text-5xl font-bold text-white leading-none tracking-tight mb-4 text-wrap-balance">Ship faster with less friction</h1>
        <p class="text-lg text-gray-400 max-w-[50ch] mx-auto mb-8">The modern way to build, deploy, and scale your marketing sites. No compromises.</p>
        <div class="flex gap-4 justify-center">
          <Button size="lg">Start Free Trial <ArrowRight size={18} /></Button>
          <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-lg px-8 py-4 rounded-md bg-transparent text-white shadow-[inset_0_0_0_1px_rgba(255,255,255,0.2)] hover:bg-white/10 active:bg-white/15 active:translate-y-px focus-visible:outline-2 focus-visible:outline-primary-300 focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Watch Demo</button>
        </div>
      </div>
    </section>

    <!-- Features with card actions -->
    <section class="px-8">
      <div class="max-w-[var(--container-max)] mx-auto">
        <h2 class="text-2xl font-bold text-gray-900 text-center mb-2">Everything you need</h2>
        <p class="text-gray-500 text-center mb-12 max-w-[45ch] mx-auto">Powerful features designed for teams that move fast.</p>
        <div class="grid grid-cols-3 gap-6">
          <div class="bg-white rounded-lg border border-gray-200 p-6">
            <div class="h-10 w-10 bg-primary-50 rounded-lg mb-4 flex items-center justify-center">
              <div class="h-5 w-5 bg-primary-500 rounded-sm"></div>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Lightning Fast</h3>
            <p class="text-sm text-gray-500 mb-6">Deploy in seconds, not minutes. Our edge network ensures global performance.</p>
            <Button size="sm" variant="ghost">Learn more <ArrowRight size={14} /></Button>
          </div>
          <div class="bg-white rounded-lg border border-gray-200 p-6">
            <div class="h-10 w-10 bg-primary-50 rounded-lg mb-4 flex items-center justify-center">
              <div class="h-5 w-5 bg-primary-500 rounded-sm"></div>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Team Collaboration</h3>
            <p class="text-sm text-gray-500 mb-6">Real-time editing, comments, and version history for your whole team.</p>
            <Button size="sm" variant="ghost">Learn more <ArrowRight size={14} /></Button>
          </div>
          <div class="bg-white rounded-lg border border-gray-200 p-6">
            <div class="h-10 w-10 bg-primary-50 rounded-lg mb-4 flex items-center justify-center">
              <div class="h-5 w-5 bg-primary-500 rounded-sm"></div>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Enterprise Security</h3>
            <p class="text-sm text-gray-500 mb-6">SOC 2 compliant, SSO, and granular permissions out of the box.</p>
            <Button size="sm" variant="ghost">Learn more <ArrowRight size={14} /></Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing with primary action -->
    <section class="px-8">
      <div class="max-w-[var(--container-max)] mx-auto">
        <h2 class="text-2xl font-bold text-gray-900 text-center mb-2">Simple pricing</h2>
        <p class="text-gray-500 text-center mb-12 max-w-[45ch] mx-auto">No hidden fees. Cancel anytime.</p>
        <div class="grid grid-cols-3 gap-6 max-w-3xl mx-auto">
          <div class="bg-white rounded-lg border border-gray-200 p-6">
            <p class="text-sm font-semibold text-gray-500 mb-1">Starter</p>
            <p class="text-3xl font-bold text-gray-900 mb-1">$0</p>
            <p class="text-sm text-gray-400 mb-6">Free forever</p>
            <Button variant="secondary" size="sm">Get Started</Button>
          </div>
          <div class="bg-white rounded-lg border-2 border-primary-500 p-6 relative">
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 text-xs font-semibold text-white bg-primary-500 px-3 py-0.5 rounded-full">Popular</div>
            <p class="text-sm font-semibold text-primary-500 mb-1">Pro</p>
            <p class="text-3xl font-bold text-gray-900 mb-1">$29</p>
            <p class="text-sm text-gray-400 mb-6">per month</p>
            <Button size="sm">Start Free Trial</Button>
          </div>
          <div class="bg-white rounded-lg border border-gray-200 p-6">
            <p class="text-sm font-semibold text-gray-500 mb-1">Enterprise</p>
            <p class="text-3xl font-bold text-gray-900 mb-1">Custom</p>
            <p class="text-sm text-gray-400 mb-6">Contact sales</p>
            <Button variant="secondary" size="sm">Talk to Sales</Button>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA banner -->
    <section data-seamless class="bg-primary-600 px-8 py-20">
      <div class="max-w-[var(--container-max)] mx-auto text-center">
        <h2 class="text-3xl font-bold text-white mb-3 text-wrap-balance">Ready to get started?</h2>
        <p class="text-primary-200 text-lg mb-8 max-w-[45ch] mx-auto">Join thousands of teams already shipping faster with Acme.</p>
        <div class="flex gap-4 justify-center">
          <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-base px-6 py-3 rounded-md bg-white text-primary-600 hover:bg-primary-50 active:bg-primary-100 active:translate-y-px focus-visible:outline-2 focus-visible:outline-white focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Start Free Trial <ArrowRight size={16} /></button>
          <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-base px-6 py-3 rounded-md bg-transparent text-white shadow-[inset_0_0_0_1px_rgba(255,255,255,0.3)] hover:bg-white/10 active:bg-white/15 active:translate-y-px focus-visible:outline-2 focus-visible:outline-white focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Contact Sales</button>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <section data-seamless class="bg-gray-900 px-8 py-12">
      <div class="max-w-[var(--container-max)] mx-auto flex items-center justify-between">
        <p class="text-sm text-gray-500">&copy; 2026 Acme Inc.</p>
        <nav class="flex gap-6">
          <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-sm px-4 py-2 rounded-sm bg-transparent text-gray-500 hover:bg-white/10 hover:text-white active:bg-white/15 active:translate-y-px transition-colors duration-fast ease-default">Privacy</button>
          <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-sm px-4 py-2 rounded-sm bg-transparent text-gray-500 hover:bg-white/10 hover:text-white active:bg-white/15 active:translate-y-px transition-colors duration-fast ease-default">Terms</button>
          <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-sm px-4 py-2 rounded-sm bg-transparent text-gray-500 hover:bg-white/10 hover:text-white active:bg-white/15 active:translate-y-px transition-colors duration-fast ease-default">Support</button>
        </nav>
      </div>
    </section>
  </div>
</FullScreenLayout>
