---
import '../styles/global.css';
import '../styles/reset.css';
import '../styles/gallery.css';

const sections = [
  {
    label: 'Wireframes',
    description: 'Page structure and layout sketches. Hierarchy, flow, and content placement before visual design.',
    href: '/wireframes/home',
  },
  {
    label: 'Design System',
    description: 'Tokens, primitives, and components. The visual language — colors, type, spacing, buttons, cards, forms.',
    href: '/style-guide',
  },
  {
    label: 'Layouts',
    description: 'Full page compositions built from approved components. The assembled deliverable.',
    href: '/layouts',
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Gallery — Design System</title>
  </head>
  <body>
    <div class="gallery-hub">
      <header class="gallery-hub-header">
        <h1 class="text-4xl font-bold text-gray-900 tracking-tight">Gallery</h1>
        <p class="text-lg text-gray-500 mt-2">Design deliverable — wireframes, tokens, components, and pages.</p>
      </header>
      <div class="gallery-hub-grid">
        {sections.map(({ label, description, href }) => (
          <a href={href} class="gallery-hub-card">
            <h2 class="text-lg font-semibold text-gray-900">{label}</h2>
            <p class="text-sm text-gray-500 mt-1">{description}</p>
          </a>
        ))}
      </div>
    </div>
  </body>
</html>
