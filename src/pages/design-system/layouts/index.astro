---
import '../../../styles/global.css';
import '../../../styles/reset.css';
import '../../../styles/design-system.css';

const layouts: { href: string; label: string; description: string }[] = [
  { href: '/design-system/layouts/home', label: 'Home', description: 'Landing page with hero, features, blog, and testimonials' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />
    <title>Layouts — Design System</title>
  </head>
  <body>
    <div class="ds-layouts">
      <header class="ds-layouts-header">
        <a href="/design-system" class="ds-layouts-back">← Design System</a>
        <h1>Layouts</h1>
      </header>
      <div class="ds-layouts-grid">
        {layouts.map(({ href, label, description }) => (
          <a href={href} class="ds-layouts-card">
            <div class="ds-layouts-card-preview"></div>
            <span class="ds-layouts-card-label">{label}</span>
            <span class="ds-layouts-card-desc">{description}</span>
          </a>
        ))}
      </div>
    </div>
  </body>
</html>
