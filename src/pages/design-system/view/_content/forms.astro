---
import TextInput from '@/components/TextInput.astro';
import Textarea from '@/components/Textarea.astro';
import Select from '@/components/Select.astro';
import Checkbox from '@/components/Checkbox.astro';
import Radio from '@/components/Radio.astro';
import Toggle from '@/components/Toggle.astro';
import FileUpload from '@/components/FileUpload.astro';
import SearchInput from '@/components/SearchInput.astro';
import Button from '@/components/Button.astro';
---

<div class="p-12 max-w-3xl mx-auto flex flex-col gap-12">

  <!-- Text inputs -->
  <div class="flex flex-wrap gap-8" style="align-items: flex-start;">
    <div class="w-56">
      <TextInput placeholder="Placeholder text" />
    </div>
    <div class="w-56">
      <TextInput label="Email address" placeholder="you@example.com" />
    </div>
    <div class="w-56">
      <TextInput label="Search" placeholder="Search..." withIcon />
    </div>
  </div>

  <!-- Text input sizes -->
  <div class="flex flex-wrap gap-8 items-end">
    <div class="w-48"><TextInput size="sm" placeholder="Small" /></div>
    <div class="w-48"><TextInput size="md" placeholder="Medium" /></div>
    <div class="w-48"><TextInput size="lg" placeholder="Large" /></div>
  </div>

  <!-- Text input states -->
  <div class="flex flex-wrap gap-8" style="align-items: flex-start;">
    <div class="w-56">
      <TextInput state="error" label="Username" value="ab" hint="Must be at least 3 characters" />
    </div>
    <div class="w-56">
      <TextInput state="success" label="Username" value="janedoe" hint="Available!" />
    </div>
    <div class="w-56">
      <TextInput state="disabled" label="Account ID" value="ACC-00412" />
    </div>
  </div>

  <!-- Textareas -->
  <div class="flex flex-wrap gap-8" style="align-items: flex-start;">
    <div class="w-64">
      <Textarea label="Message" placeholder="Write your message..." rows={3} />
    </div>
    <div class="w-64">
      <Textarea state="error" label="Bio" placeholder="Tell us about yourself" hint="Required field" rows={3} />
    </div>
    <div class="w-64">
      <Textarea state="disabled" label="Notes" value="Read-only content here." rows={3} />
    </div>
  </div>

  <!-- Selects -->
  <div class="flex flex-wrap gap-8" style="align-items: flex-start;">
    <div class="w-56">
      <Select label="Country" options={['United States', 'Canada', 'United Kingdom', 'Germany']} placeholder="Choose a country" />
    </div>
    <div class="w-56">
      <Select state="error" label="Priority" options={['Low', 'Medium', 'High']} hint="Please select a priority" />
    </div>
    <div class="w-56">
      <Select state="disabled" label="Region" options={['North America']} />
    </div>
  </div>

  <!-- Checkboxes -->
  <div class="flex flex-wrap gap-8 items-start">
    <Checkbox label="Unchecked" />
    <Checkbox checked label="Checked" />
    <Checkbox disabled label="Disabled" />
    <Checkbox checked disabled label="Disabled checked" />
  </div>

  <!-- Checkbox sizes -->
  <div class="flex flex-wrap gap-8 items-center">
    <Checkbox size="sm" checked label="Small" />
    <Checkbox size="md" checked label="Medium" />
    <Checkbox size="lg" checked label="Large" />
  </div>

  <!-- Radios -->
  <div class="flex flex-wrap gap-8 items-start">
    <Radio label="Unselected" />
    <Radio checked label="Selected" />
    <Radio disabled label="Disabled" />
    <Radio checked disabled label="Disabled selected" />
  </div>

  <!-- Radio sizes -->
  <div class="flex flex-wrap gap-8 items-center">
    <Radio size="sm" checked label="Small" />
    <Radio size="md" checked label="Medium" />
    <Radio size="lg" checked label="Large" />
  </div>

  <!-- Toggles -->
  <div class="flex flex-wrap gap-8 items-start">
    <Toggle label="Off" />
    <Toggle checked label="On" />
    <Toggle disabled label="Disabled" />
    <Toggle checked disabled label="Disabled on" />
  </div>

  <!-- Toggle sizes -->
  <div class="flex flex-wrap gap-8 items-center">
    <Toggle size="sm" checked label="Small" />
    <Toggle size="md" checked label="Medium" />
    <Toggle size="lg" checked label="Large" />
  </div>

  <!-- Search inputs -->
  <div class="flex flex-wrap gap-8" style="align-items: flex-start;">
    <div class="w-56"><SearchInput placeholder="Search..." /></div>
    <div class="w-56"><SearchInput state="has-value" withClear /></div>
    <div class="w-56"><SearchInput state="disabled" /></div>
  </div>

  <!-- Search sizes -->
  <div class="flex flex-wrap gap-8 items-end">
    <div class="w-48"><SearchInput size="sm" /></div>
    <div class="w-48"><SearchInput size="md" /></div>
    <div class="w-48"><SearchInput size="lg" /></div>
  </div>

  <!-- File uploads -->
  <div class="flex flex-wrap gap-8" style="align-items: flex-start;">
    <div class="w-64"><FileUpload variant="dropzone" /></div>
    <div class="w-64"><FileUpload variant="dropzone" state="dragover" /></div>
    <div class="w-64"><FileUpload variant="dropzone" state="disabled" /></div>
  </div>

  <!-- File upload button style -->
  <div class="flex flex-wrap gap-6 items-center">
    <FileUpload variant="button" />
    <FileUpload variant="button" state="disabled" />
  </div>

  <!-- Composed form -->
  <div class="border-t border-border pt-12">
    <div class="max-w-md flex flex-col gap-6">
      <div class="grid grid-cols-2 gap-4">
        <TextInput label="First name" placeholder="Jane" />
        <TextInput label="Last name" placeholder="Doe" />
      </div>
      <TextInput label="Email" placeholder="jane@example.com" />
      <Select label="Subject" options={['General inquiry', 'Technical support', 'Billing']} placeholder="Choose a subject" />
      <Textarea label="Message" placeholder="How can we help?" rows={3} />
      <Checkbox label="I agree to the terms and conditions" />
      <div class="flex gap-3">
        <Button>Send Message</Button>
        <Button variant="ghost">Cancel</Button>
      </div>
    </div>
  </div>

</div>
