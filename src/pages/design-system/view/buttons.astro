---
import FullScreen from '../_layout/FullScreen.astro';
import Button from '@/components/Button.astro';
import ArrowRight from '@/icons/ArrowRight.astro';
---

<FullScreen title="Buttons">
  <div class="p-12 max-w-[var(--container-max)] mx-auto flex flex-col gap-12">

    <!-- Variants -->
    <div class="flex flex-wrap gap-4 items-center">
      <Button>Primary</Button>
      <Button variant="secondary">Secondary</Button>
      <Button variant="ghost">Ghost</Button>
    </div>

    <!-- Sizes -->
    <div class="flex flex-wrap gap-4 items-end">
      <Button size="sm">Small</Button>
      <Button>Medium</Button>
      <Button size="lg">Large</Button>
    </div>

    <!-- Sizes across variants -->
    <div class="flex flex-wrap gap-4 items-end">
      <Button size="sm" variant="secondary">Small</Button>
      <Button variant="secondary">Medium</Button>
      <Button size="lg" variant="secondary">Large</Button>
    </div>

    <!-- Trailing icons -->
    <div class="flex flex-wrap gap-4 items-center">
      <Button size="sm">Next <ArrowRight size={14} /></Button>
      <Button>Continue <ArrowRight size={16} /></Button>
      <Button size="lg">Get Started <ArrowRight size={18} /></Button>
    </div>

    <!-- Leading icons -->
    <div class="flex flex-wrap gap-4 items-center">
      <Button variant="secondary"><ArrowRight size={16} /> Go Back</Button>
      <Button variant="ghost"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg> Search</Button>
      <Button variant="secondary"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"/><polyline points="16 6 12 2 8 6"/><line x1="12" y1="2" x2="12" y2="15"/></svg> Upload</Button>
    </div>

    <!-- Disabled -->
    <div class="flex flex-wrap gap-4 items-center">
      <Button disabled>Primary</Button>
      <Button variant="secondary" disabled>Secondary</Button>
      <Button variant="ghost" disabled>Ghost</Button>
    </div>

    <!-- On dark -->
    <div class="rounded-lg overflow-hidden -mx-12">
      <div class="bg-gray-900 px-12 py-8 flex flex-wrap gap-4 items-center">
        <Button>Primary</Button>
        <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-base px-6 py-3 rounded-md bg-transparent text-white shadow-[inset_0_0_0_1px_rgba(255,255,255,0.2)] hover:bg-white/10 active:bg-white/15 active:translate-y-px focus-visible:outline-2 focus-visible:outline-primary-300 focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Secondary</button>
        <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-base px-6 py-3 rounded-md bg-transparent text-gray-400 hover:bg-white/10 hover:text-white active:bg-white/15 active:translate-y-px focus-visible:outline-2 focus-visible:outline-primary-300 focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Ghost</button>
        <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-base px-6 py-3 rounded-md bg-transparent text-white shadow-[inset_0_0_0_1px_rgba(255,255,255,0.2)] hover:bg-white/10 active:bg-white/15 active:translate-y-px focus-visible:outline-2 focus-visible:outline-primary-300 focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Learn More <ArrowRight size={16} /></button>
      </div>
      <div class="bg-primary-600 px-12 py-8 flex flex-wrap gap-4 items-center">
        <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-base px-6 py-3 rounded-md bg-white text-primary-600 hover:bg-primary-50 active:bg-primary-100 active:translate-y-px focus-visible:outline-2 focus-visible:outline-white focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Primary</button>
        <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-base px-6 py-3 rounded-md bg-transparent text-white shadow-[inset_0_0_0_1px_rgba(255,255,255,0.3)] hover:bg-white/10 active:bg-white/15 active:translate-y-px focus-visible:outline-2 focus-visible:outline-white focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Secondary</button>
        <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-base px-6 py-3 rounded-md bg-transparent text-primary-100 hover:bg-white/10 hover:text-white active:bg-white/15 active:translate-y-px focus-visible:outline-2 focus-visible:outline-white focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Ghost</button>
        <button class="inline-flex items-center justify-center gap-2 font-semibold cursor-pointer text-base px-6 py-3 rounded-md bg-white text-primary-600 hover:bg-primary-50 active:bg-primary-100 active:translate-y-px focus-visible:outline-2 focus-visible:outline-white focus-visible:outline-offset-2 transition-colors duration-fast ease-default">Get Started <ArrowRight size={16} /></button>
      </div>
    </div>

  </div>
</FullScreen>
