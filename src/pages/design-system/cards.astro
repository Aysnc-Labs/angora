---
import Layout from './_layout/Layout.astro';
import Card from '../../components/Card/Card.astro';
import CardImage from '../../components/Card/CardImage.astro';
import CardBody from '../../components/Card/CardBody.astro';
import CardEyebrow from '../../components/Card/CardEyebrow.astro';
import CardTitle from '../../components/Card/CardTitle.astro';
import CardDescription from '../../components/Card/CardDescription.astro';
import ArrowRight from '../../icons/ArrowRight.astro';
---

<Layout title="Cards" description="Three visual treatments for containing content. Default for most uses, elevated for interactive or featured items, flat for grouped or recessed content." fullscreenHref="/design-system/view/cards">

  <!-- Variants -->
  <section class="specimen-section">
    <h2>Variants</h2>
    <p class="text-sm text-gray-600 mb-6 max-w-[65ch]">
      <code class="text-xs bg-gray-100 px-1.5 py-0.5 rounded-sm font-mono">default</code> uses a 1px border + subtle shadow.
      <code class="text-xs bg-gray-100 px-1.5 py-0.5 rounded-sm font-mono">elevated</code> drops the border and relies on a larger shadow that grows on hover.
      <code class="text-xs bg-gray-100 px-1.5 py-0.5 rounded-sm font-mono">flat</code> uses a tinted background with no border or shadow.
    </p>
    <div class="border border-gray-200 rounded-lg p-8">
      <div class="grid grid-cols-3 gap-6">
        <div class="flex flex-col gap-3">
          <Card>
            <CardTitle>Default</CardTitle>
            <CardDescription>Border + subtle shadow. The workhorse for content sections, lists, and dashboards.</CardDescription>
          </Card>
          <span class="text-xs font-mono text-gray-400 text-center">default</span>
        </div>
        <div class="flex flex-col gap-3">
          <Card variant="elevated">
            <CardTitle>Elevated</CardTitle>
            <CardDescription>Shadow only, lifts on hover. For interactive items like pricing tiers or selectable options.</CardDescription>
          </Card>
          <span class="text-xs font-mono text-gray-400 text-center">elevated</span>
        </div>
        <div class="flex flex-col gap-3">
          <Card variant="flat">
            <CardTitle>Flat</CardTitle>
            <CardDescription>Tinted background, no border. For grouped content or low-emphasis containers.</CardDescription>
          </Card>
          <span class="text-xs font-mono text-gray-400 text-center">flat</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Card -->
  <section class="specimen-section">
    <h2>Content Card</h2>
    <p class="text-sm text-gray-600 mb-6 max-w-[65ch]">
      Image top with <code class="text-xs bg-gray-100 px-1.5 py-0.5 rounded-sm font-mono">padding=false</code> on the card, then a padded body below. The image uses <code class="text-xs bg-gray-100 px-1.5 py-0.5 rounded-sm font-mono">object-fit: cover</code> in a fixed-height container. Good for blog posts, case studies, portfolios.
    </p>
    <div class="border border-gray-200 rounded-lg p-8">
      <div class="grid grid-cols-3 gap-6">
        <Card padding={false}>
          <CardImage />
          <CardBody>
            <CardEyebrow>Engineering</CardEyebrow>
            <CardTitle>Building reliable distributed systems</CardTitle>
            <CardDescription>How we scaled our infrastructure to handle 10x traffic growth without downtime.</CardDescription>
            <a class="text-sm font-semibold text-primary-500 inline-flex items-center gap-1 hover:text-primary-600 transition-colors duration-fast ease-default mt-4" href="#">Read more <ArrowRight size={14} /></a>
          </CardBody>
        </Card>
        <Card padding={false}>
          <CardImage />
          <CardBody>
            <CardEyebrow>Product</CardEyebrow>
            <CardTitle>Announcing our new dashboard</CardTitle>
            <CardDescription>A completely redesigned analytics experience with real-time insights and custom reports.</CardDescription>
            <a class="text-sm font-semibold text-primary-500 inline-flex items-center gap-1 hover:text-primary-600 transition-colors duration-fast ease-default mt-4" href="#">Read more <ArrowRight size={14} /></a>
          </CardBody>
        </Card>
        <Card padding={false}>
          <CardImage />
          <CardBody>
            <CardEyebrow>Design</CardEyebrow>
            <CardTitle>Our approach to accessible color</CardTitle>
            <CardDescription>Why we rebuilt our entire palette around WCAG AA contrast ratios from day one.</CardDescription>
            <a class="text-sm font-semibold text-primary-500 inline-flex items-center gap-1 hover:text-primary-600 transition-colors duration-fast ease-default mt-4" href="#">Read more <ArrowRight size={14} /></a>
          </CardBody>
        </Card>
      </div>
    </div>
  </section>

  <!-- Feature Card -->
  <section class="specimen-section">
    <h2>Feature Card</h2>
    <p class="text-sm text-gray-600 mb-6 max-w-[65ch]">
      Icon or illustration at top, then title and description. No image, no CTA link — the card itself is the content. Works well in 3- or 4-column grids for feature and benefit sections.
    </p>
    <div class="border border-gray-200 rounded-lg p-8">
      <div class="grid grid-cols-3 gap-6">
        <Card variant="flat">
          <div class="w-10 h-10 rounded-lg bg-primary-100 text-primary-600 flex items-center justify-center mb-4">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/></svg>
          </div>
          <CardTitle>Lightning fast</CardTitle>
          <CardDescription>Sub-100ms response times with edge computing and intelligent caching.</CardDescription>
        </Card>
        <Card variant="flat">
          <div class="w-10 h-10 rounded-lg bg-primary-100 text-primary-600 flex items-center justify-center mb-4">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
          </div>
          <CardTitle>Secure by default</CardTitle>
          <CardDescription>End-to-end encryption, SOC 2 compliance, and automatic key rotation.</CardDescription>
        </Card>
        <Card variant="flat">
          <div class="w-10 h-10 rounded-lg bg-primary-100 text-primary-600 flex items-center justify-center mb-4">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
          </div>
          <CardTitle>Global scale</CardTitle>
          <CardDescription>Deploy to 30+ regions with one click. Automatic failover and load balancing.</CardDescription>
        </Card>
      </div>
    </div>
  </section>

  <!-- Common Pairings -->
  <section class="specimen-section">
    <h2>Common Pairings</h2>
    <p class="text-sm text-gray-600 mb-6 max-w-[65ch]">
      Cards composed into realistic layouts — a testimonial using a flat card with avatar + quote.
    </p>

    <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-4">Testimonial</h3>
    <div class="border border-gray-200 rounded-lg p-8">
      <div class="max-w-lg">
        <Card variant="flat">
          <div class="flex gap-4">
            <div class="w-10 h-10 rounded-full bg-gray-300 shrink-0"></div>
            <div>
              <p class="text-sm text-gray-900 mb-2">"This completely changed how we think about our marketing pipeline. The analytics alone paid for itself in the first month."</p>
              <p class="text-xs font-semibold text-gray-900">Sarah Chen</p>
              <p class="text-xs text-gray-400">VP Marketing, Acme Corp</p>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Anatomy -->
  <section class="specimen-section">
    <h2>Anatomy</h2>
    <p class="text-sm text-gray-600 mb-6 max-w-[65ch]">
      Class breakdown per variant. The component accepts <code class="text-xs bg-gray-100 px-1.5 py-0.5 rounded-sm font-mono">variant</code> and <code class="text-xs bg-gray-100 px-1.5 py-0.5 rounded-sm font-mono">padding</code> props.
    </p>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-gray-200">
            <th class="text-left py-3 pr-6 font-semibold text-gray-900">Variant</th>
            <th class="text-left py-3 pr-6 font-semibold text-gray-900">Classes</th>
            <th class="text-left py-3 font-semibold text-gray-900">Use case</th>
          </tr>
        </thead>
        <tbody class="text-gray-600">
          <tr class="border-b border-gray-100">
            <td class="py-3 pr-6 font-mono text-xs">default</td>
            <td class="py-3 pr-6 font-mono text-xs">rounded-lg p-6 bg-white border border-gray-200 shadow-sm</td>
            <td class="py-3">Content lists, dashboards, general containers</td>
          </tr>
          <tr class="border-b border-gray-100">
            <td class="py-3 pr-6 font-mono text-xs">elevated</td>
            <td class="py-3 pr-6 font-mono text-xs">rounded-lg p-6 bg-white shadow-lg hover:shadow-xl transition-shadow</td>
            <td class="py-3">Interactive items, featured tiers, selectable options</td>
          </tr>
          <tr>
            <td class="py-3 pr-6 font-mono text-xs">flat</td>
            <td class="py-3 pr-6 font-mono text-xs">rounded-lg p-6 bg-gray-50</td>
            <td class="py-3">Grouped content, low-emphasis, recessed containers</td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>

</Layout>
